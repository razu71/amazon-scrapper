{
  "manifest_version": 3,
  "name": "Amazon Product Scraper",
  "description": "Extract structured product data from Amazon product pages.",
  "version": "1.0.0",
  "permissions": [
    "activeTab",
    "tabs"
  ],
  "host_permissions": [
    "https://www.amazon.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.amazon.com/*"
      ],
      "js": [
        "src/content/utils.js",
        "src/content/amazonScraper.js",
        "src/content/content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "Amazon Product Scraper",
    "default_popup": "src/popup/popup.html"
  }
}
